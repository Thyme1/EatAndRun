<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.meal.MealListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/separation_normal"
            android:layout_marginTop="@dimen/separation_small"
            android:layout_marginRight="@dimen/separation_normal"
            android:layout_marginBottom="@dimen/separation_small"
            android:layout_weight="1"
            android:background="@drawable/meal_item_layout"
            android:orientation="vertical">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragment"
                android:name="com.thyme.eantandrun.ui.meal.MealListFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout_board"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"

            android:orientation="vertical">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fabAddMeal"
                android:layout_width="63dp"

                android:layout_height="53dp"
                android:layout_gravity="end"
                android:layout_marginEnd="32dp"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:contentDescription="@string/add_meal_button"
                android:focusable="true"
                android:src="@drawable/plus_sign"
                app:backgroundTint="@color/blue_normal" />

            <Button
                android:id="@+id/button_login"
                style="@style/AppTheme.Button.Blue"
                android:layout_width="323dp"
                android:layout_height="73dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/summary"
                android:textSize="@dimen/text_size_biggest"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>